<Window x:Class="Ferale.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ferale"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="450" Width="400" WindowStyle="None">
    <Grid>
        <Image x:Name="imgsplash"  HorizontalAlignment="Center" Height="280" VerticalAlignment="Center" Width="300" Source="img/logo.jpg" RenderTransformOrigin="0.5,0.5" Stretch="UniformToFill" Margin="50,72,50,97.6" />
        <ProgressBar HorizontalAlignment="Left" Height="8" Margin="50,370,0,0" VerticalAlignment="Top" Width="300" IsIndeterminate="True" Foreground="{StaticResource GreenBrush}" BorderBrush="{StaticResource WhiteBrush}" Background="#FFC5E1A5" LargeChange="0"/>

    </Grid>
</Window>
